# ================================
# CONFIGURATION TALENTLINK BACKEND
# ================================
# ⚠️ ATTENTION: Copier ce fichier en .env et renseigner les vraies valeurs
# Ce fichier exemple ne contient que la structure sans les secrets

# ================================
# SÉCURITÉ - Tokens et Clés
# ================================
SECRET_KEY=your-secret-key-here-256bits-minimum
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# BASE DE DONNÉES
# ================================
DATABASE_URL_AUTH=sqlite:///./service_auth/database/database.db
DATABASE_URL_PROFILE=sqlite:///./service_profile/database/database.db
DATABASE_URL_OFFERS=sqlite:///./service_offers/database/database.db
DATABASE_URL_MESSAGING=sqlite:///./service_messaging/database/database.db
DATABASE_URL_MAIL=sqlite:///./service_mail/database/database.db

# ================================
# SERVICES - Configuration des Ports
# ================================
SERVICE_AUTH_HOST=127.0.0.1
SERVICE_AUTH_PORT=8001
SERVICE_PROFILE_HOST=127.0.0.1
SERVICE_PROFILE_PORT=8002
SERVICE_OFFERS_HOST=127.0.0.1
SERVICE_OFFERS_PORT=8003
SERVICE_MESSAGING_HOST=127.0.0.1
SERVICE_MESSAGING_PORT=8004
SERVICE_MAIL_HOST=127.0.0.1
SERVICE_MAIL_PORT=8005

# ================================
# EMAIL / SMTP Configuration
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_USE_SSL=true
FROM_EMAIL=your-email@gmail.com
FROM_NAME=TalentLink
EMAIL_DEBUG=false

# ================================
# FRONTEND Configuration
# ================================
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ================================
# ENVIRONNEMENT
# ================================
ENVIRONMENT=development
DEBUG=true

# ================================
# UPLOADS Configuration
# ================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.jpg,.jpeg,.png

# ================================
# LOGS Configuration
# ================================
LOG_LEVEL=INFO
LOG_FILE=./logs/talenlink.log